{
	"name": "Client",
	"base": "PersistedModel",
	"idInjection": false,
	"strict": true,
	"options": {
		"validateUpsert": true
	},
	"properties": {
		"id": {
			"type": "string",
			"id": true,
			"generated": false,
			"defaultFn": "uuidv4"
		},
		"tenantId": {
	  		"type": "string",
	  		"required": false
		},
		"secret": {
			"type": "string",
			"required": false,
			"defaultFn": "uuidv4"
		},
		"type": {
			"type": "string",
			"required": true,
			"enum": ["public", "confidential"]
		},
		"name": {
			"type": "string",
			"required": true
		},
		"contactEmail": {
			"type": ["string"],
			"required": true
		},
		"x509CertificateChain": {
			"type": ["string"],
			"required": false
		},
		"updatedBy": {
			"type": "string",
			"required": true
		},
		"createdBy": {
			"type": "string",
			"required": true
		}
	},
	"protected": ["secret"],
	"validations": [],
	"relations": {
		"apis": {
			"type": "hasMany",
			"model": "Api",
			"foreignKey": "clientId",
			"through": "ClientRegistration"
		}
	},
	"acls": [],
	"methods": {},
	"mixins": {
		"TimeStamp": {
			"required" : true,
			"validateUpsert": true
		}
	}
}
